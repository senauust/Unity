using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class MathManager : MonoBehavior 
{
    float minimum = -1.0f;
    float maximum = 1.0f;

    private void Update()
    {
       transform.position = new Vector3(Mathf.Lerp(minimum,maximum,t),0,0);
       t += 0.5f * Time.deltaTime;

       if (t>1.0f)
       {
           float temp = maximum;
           maximum = minimum ;
           minimum = temp;
           t = 0.0f;
       }
    }
}
